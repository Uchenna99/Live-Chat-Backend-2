generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Colour {
  Green
  Blue
  Red
  Pink
  Purple
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String        @id @unique @default(cuid())
  name      String
  email     String        @unique
  password  String
  verified  Boolean?      @default(false)
  otp       String?
  otpExpiry DateTime?
  colour    Colour        @default(Blue)
  image     String?
  thumbnail String        @default("https://res.cloudinary.com/df6xz7bqp/image/upload/v1740443796/default_user_lppcww.jpg")
  role      Role          @default(USER)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  Message   ChatMessage[]
}

model ChatMessage {
  id        String   @id @unique @default(cuid())
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  room      String   @default("chatroom1")
  edited    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
